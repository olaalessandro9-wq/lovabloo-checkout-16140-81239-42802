# Ambiente padrão (sandbox | production)
PUSHINPAY_ENV=sandbox

# Caminhos dos endpoints
PUSHINPAY_CREATE_PATH=/pix/cashIn
PUSHINPAY_STATUS_PATH=/pix/consult

# Bases corretas
PUSHINPAY_BASE_URL_PROD=https://api.pushinpay.com.br/api
PUSHINPAY_BASE_URL_SANDBOX=https://api-sandbox.pushinpay.com.br/api

# Webhook auth (opcional)
PUSHINPAY_WEBHOOK_HEADER_NAME=X-PushinPay-Signature

# URL pública do webhook (sua Edge Function publicada)
PUSHINPAY_WEBHOOK_PUBLIC_URL=https://<sua-instancia>.supabase.co/functions/v1/pushinpay-webhook
