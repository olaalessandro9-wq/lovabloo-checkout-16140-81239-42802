# Base URLs defaults – podem ser sobrescritos por registro (ex.: usuário escolhe sandbox)
PUSHINPAY_BASE_URL_PROD=https://fapi.pushinpay.com.br/api
PUSHINPAY_BASE_URL_SANDBOX=https://fapi-sandbox.pushinpay.com.br/api

# Webhook auth (vamos validar um header customizável)
PUSHINPAY_WEBHOOK_HEADER=X-PushinPay-Secret
PUSHINPAY_WEBHOOK_SECRET=<defina_um_segredo_forte_aqui>

# URL pública do webhook (use a do seu domínio/API Gateway da Supabase)
PUBLIC_WEBHOOK_URL=https://<sua-instancia>.functions.supabase.co/pushinpay-webhook
